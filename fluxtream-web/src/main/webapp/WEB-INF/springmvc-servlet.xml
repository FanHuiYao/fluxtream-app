<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
        
	<bean id="placeholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="locations">
			<list>
				<value>classpath:common.properties</value>
				<value>classpath:${TARGET_ENV}.properties</value>
			</list>
		</property>
	</bean>

	<mvc:resources mapping="/index.html" location="/index.html" cache-period="31556926" />
	<mvc:resources mapping="/${release}/js/**" location="/js/" cache-period="31556926" />
	<mvc:resources mapping="/${release}/less/**" location="/less/" cache-period="31556926" />
	<mvc:resources mapping="/${release}/css/**" location="/css/" cache-period="31556926" />
	<mvc:resources mapping="/css/**" location="/css/" cache-period="31556926" />
	<mvc:resources mapping="/static/**" location="/static/" cache-period="31556926" />
	<mvc:resources mapping="/${release}/images/**" location="/images/" cache-period="31556926" />

	<mvc:resources mapping="/${release}/admin/js/**" location="/admin/js/" cache-period="31556926" />
	<mvc:resources mapping="/${release}/admin/css/**" location="/admin/css/" cache-period="31556926" />
	<mvc:resources mapping="/${release}/admin/images/**" location="/admin/images/" cache-period="31556926" />

	<mvc:resources mapping="${release}/widgets/dashboard/week/**" location="/WEB-INF/jsp/widgets/weeklyDashboardWidgets/" cache-period="31556926" />
	<mvc:resources mapping="${release}/widgets/dashboard/day/**" location="/WEB-INF/jsp/widgets/dailyDashboardWidgets/" cache-period="31556926" />
	<mvc:resources mapping="${release}/widgets/dashboard/month/**" location="/WEB-INF/jsp/widgets/monthlyDashboardWidgets/" cache-period="31556926" />
	<mvc:resources mapping="${release}/widgets/dashboard/year/**" location="/WEB-INF/jsp/widgets/yearlyDashboardWidgets/" cache-period="31556926" />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

</beans>