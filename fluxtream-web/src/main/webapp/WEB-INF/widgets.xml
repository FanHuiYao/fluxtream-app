<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="dayWidgetsStatsHelper" class="com.fluxtream.mvc.widgets.controllers.StatsHelper">
		<constructor-arg ref="dayWidgetsProperties"></constructor-arg>
	</bean>
	<bean id="weekWidgetsStatsHelper" class="com.fluxtream.mvc.widgets.controllers.StatsHelper">
		<constructor-arg ref="weekWidgetsProperties"></constructor-arg>
	</bean>
	<bean id="monthWidgetsStatsHelper" class="com.fluxtream.mvc.widgets.controllers.StatsHelper">
		<constructor-arg ref="monthWidgetsProperties"></constructor-arg>
	</bean>
	<bean id="yearWidgetsStatsHelper" class="com.fluxtream.mvc.widgets.controllers.StatsHelper">
		<constructor-arg ref="yearWidgetsProperties"></constructor-arg>
	</bean>

   	<bean id="autoReloadStrategy" class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"></bean>
	<bean id="dayWidgetsProperties" class="org.apache.commons.configuration.PropertiesConfiguration">
		<property name="reloadingStrategy" ref="autoReloadStrategy"/>
		<constructor-arg value="widgets/day.properties"/>
   	</bean>
	<bean id="weekWidgetsProperties" class="org.apache.commons.configuration.PropertiesConfiguration">
		<property name="reloadingStrategy" ref="autoReloadStrategy"/>
		<constructor-arg value="widgets/week.properties"/>
   	</bean>
	<bean id="monthWidgetsProperties" class="org.apache.commons.configuration.PropertiesConfiguration">
		<property name="reloadingStrategy" ref="autoReloadStrategy"/>
		<constructor-arg value="widgets/month.properties"/>
   	</bean>
	<bean id="yearWidgetsProperties" class="org.apache.commons.configuration.PropertiesConfiguration">
		<property name="reloadingStrategy" ref="autoReloadStrategy"/>
		<constructor-arg value="widgets/year.properties"/>
   	</bean>

</beans>